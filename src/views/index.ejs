<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Graph Input Form</title>
    <style>
      body {
        font-family: Arial;
        padding: 20px;
      }
      .vertex-block {
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 10px;
      }
      .adj-row {
        margin-bottom: 5px;
      }
    </style>
    <script>
      function generateVertexForms() {
        const count = parseInt(document.getElementById("vertexCount").value);
        const container = document.getElementById("vertexContainer");
        container.innerHTML = "";

        for (let i = 0; i < count; i++) {
          container.innerHTML += `
          <div class="vertex-block">
            <h4>Đỉnh ${i + 1}</h4>
            Tên đỉnh: <input type="text" name="vertices[${i}][name]" required><br><br>
            Số đỉnh liền kề:
            <input type="number" name="vertices[${i}][adjCount]" min="0" onchange="generateAdjInputs(${i}, this.value)" required><br>
            <div id="adjContainer-${i}" class="adj-container"></div>
          </div>
        `;
        }
      }

      function generateAdjInputs(vertexIndex, count) {
        const container = document.getElementById(
          `adjContainer-${vertexIndex}`
        );
        container.innerHTML = "";

        for (let j = 0; j < count; j++) {
          container.innerHTML += `
          <div class="adj-row">
         Đỉnh liền kề ${j + 1}: 
            <input type="text" name="vertices[${vertexIndex}][adj][${j}][name]" required>
           Trọng số: 
            <input type="number" name="vertices[${vertexIndex}][adj][${j}][weight]" required>
          </div>
        `;
        }
      }
    </script>
  </head>
  <body>
    <h2>TẠO ĐỒ THỊ</h2>

    <label>Nhập số đỉnh của đồ thị</label>
    <input type="number" id="vertexCount" min="1" />
    <button type="button" onclick="generateVertexForms()">Tạo</button>

    <form method="POST" action="/add-vertex">
      <div id="vertexContainer"></div>
      <br />
      <button type="submit">Thêm tất cả các đỉnh</button>
    </form>

    <hr />

    <h2>Tìm đường đi ngắn nhất</h2>
    <form method="POST" action="/find-path">
      Đỉnh bắt đầu: <input type="text" name="start" required /> Đỉnh kết thúc:
      <input type="text" name="end" required />
      <button type="submit">Tìm đường</button>
    </form>

    <% if (path && path.length) { %>
    <h3>Đường đi ngắn nhất:</h3>
    <p><%= path.join(' → ') %></p>
    <h4>Trọng số: <%= distance %></h4>
    <!-- Hiển thị độ dài của đường đi ngắn nhất -->
    <% } else if (typeof path !== 'undefined') { %>
    <p>Không tìm thấy đường!</p>
    <% } %>

    <hr />

    <h2>Đồ thị hiện tại</h2>
    <% if (graph && Object.keys(graph).length > 0) { %>
    <ul>
      <% for (let vertex in graph) { %>
      <li>
        <strong><%= vertex %></strong>: <% const edges = graph[vertex]; %> <%
        for (let adj in edges) { %> <%= adj %> (<%= edges[adj] %>) <% } %>
      </li>
      <% } %>
    </ul>
    <form method="POST" action="/reset-graph">
      <button type="submit" style="background: red; color: white">
        Reset đồ thị
      </button>
    </form>
    <% } else { %>
    <p><i>Đồ thị rỗng</i></p>
    <% } %>
  </body>
</html>
